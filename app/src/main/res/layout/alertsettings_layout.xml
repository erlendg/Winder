<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="74dp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/temp_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_interval"
            android:id="@+id/textView" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:id="@+id/temp_spinner"
            android:layout_gravity="bottom"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/nedboer_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nedboer_intervall"
            android:id="@+id/nedboer_textview" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:id="@+id/nedboer_spinner"
            android:layout_gravity="left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/vindstyrke_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vind_styrke"
            android:id="@+id/vindstyrke_textview" />
        <TextView
            android:layout_width="165dp"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:id="@+id/vindstyrke_spinner"
            android:layout_gravity="left"/>

    </LinearLayout>

</LinearLayout>