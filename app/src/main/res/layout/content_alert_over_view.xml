<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="alertsettings" type="com.eim.winder.db.AlertSettingsDAO"/>
        <variable name="location" type="com.eim.winder.db.LocationDAO"/>
    </data>
<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eim.winder.AlertOverViewActivity"
    tools:showIn="@layout/activity_alert_over_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preferences_title"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:text="@string/your_preferences"
            android:textSize="18sp"
            android:clickable="true"/>

        <android.support.v7.widget.GridLayout
            android:id="@+id/preferences_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/text_margin"
            app:columnCount="3"
            app:rowCount="7"
            app:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible">

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="3"
                app:layout_rowSpan="1"
                android:id="@+id/row1_title"
                android:text="@{location.toString()}"
                android:background="@drawable/table_lines"
                android:padding="5dip"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row2_column1"
                android:text=""
                android:gravity="center"
                android:padding="10dip"
                android:background="@drawable/table_lines"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row2_column2"
                android:text="fra"
                android:background="@drawable/table_lines"
                android:padding="10dip"
                android:gravity="center"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row2_column3"
                android:text="til"
                android:background="@drawable/table_lines"
                android:gravity="center"
                android:padding="10dip"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row3_column1"
                android:text="@string/nedboer_intervall"
                android:background="@drawable/table_lines"
                android:gravity="left"
                android:padding="10dip"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row3_column2"
                android:text='@{""+alertsettings.precipitationMin}'
                android:background="@drawable/table_lines"
                android:gravity="center"
                android:padding="10dip"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row3_column3"
                android:text='@{""+alertsettings.precipitationMax}'
                android:background="@drawable/table_lines"
                android:gravity="center"
                android:padding="10dip"/>


            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row4_column1"
                android:text="@string/vind_styrke"
                android:gravity="left"
                android:padding="10dip"
                android:background="@drawable/table_lines"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row4_column2"
                android:text='@{""+alertsettings.windSpeedMin}'
                android:gravity="center"
                android:padding="10dip"
                android:background="@drawable/table_lines"
                />

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row4_column3"
                android:text='@{""+alertsettings.windSpeedMax}'
                android:gravity="center"
                android:padding="10dip"
                android:background="@drawable/table_lines"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row5_column1"
                android:text="@string/temp_interval"
                android:gravity="left"
                android:padding="10dip"
                android:background="@drawable/table_lines"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row5_column2"
                android:text='@{""+alertsettings.tempMin}'
                android:gravity="center"
                android:background="@drawable/table_lines"
                android:padding="10dip"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row5_column3"
                android:text='@{""+alertsettings.tempMax}'
                android:gravity="center"
                android:background="@drawable/table_lines"
                android:padding="10dip"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row6_column1"
                android:text="@string/vind_retning"
                android:gravity="left"
                android:background="@drawable/table_lines"
                android:padding="10dip"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="2"
                app:layout_rowSpan="1"
                android:id="@+id/row6_column2"
                android:text="@{alertsettings.windDirection}"
                android:gravity="center"
                android:background="@drawable/table_lines"
                android:padding="10dip" />
            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row7_column1"
                android:text="@string/sol_varsel"
                android:gravity="left"
                android:background="@drawable/table_lines"
                android:padding="10dip"/>

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="2"
                app:layout_rowSpan="1"
                android:id="@+id/row7_column2"
                android:text='@{""+alertsettings.checkSun}'
                android:gravity="center"
                android:background="@drawable/table_lines"
                android:padding="10dip" />

            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="1"
                app:layout_rowSpan="1"
                android:id="@+id/row8_column1"
                android:text="@string/sjekk_intervall"
                android:gravity="left"
                android:padding="10dip"
                android:background="@drawable/table_lines"/>
            <TextView
                app:layout_columnWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnSpan="2"
                app:layout_rowSpan="1"
                android:id="@+id/row8_column2"
                android:text='@{""+alertsettings.checkInterval}'
                android:gravity="center"
                android:padding="10dip"
                android:background="@drawable/table_lines"/>

        </android.support.v7.widget.GridLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>

</layout>